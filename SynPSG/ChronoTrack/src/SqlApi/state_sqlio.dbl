    begin
        sql = "CREATE TABLE STATE ("
        & + "CODE VARCHAR(2),"
        & + "NAME VARCHAR(30),"
        & + "REPLICATION_KEY VARCHAR(20),"
        & + "CONSTRAINT PK_STATE PRIMARY KEY CLUSTERED"
        & + " (CODE ASC))"

