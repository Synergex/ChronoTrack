.include "DEF:ChronoTrack.def"

namespace SynPSG.ChronoTrack.DataEntities

    public sealed class CustomerUpdateFields extends SynPSG.Core.DataEntities.UpdateFields

        ;;; <summary>
        ;;; Method that is called when the DataEntity class is attempting to commit
        ;;; data from a DataTable to the Synergy file.  This method is require
        ;;; to extract the data contained in the passed DataRow and populate
        ;;; a synergy record area.  This is then retrned to the base class
        ;;; </summary>
        ;;; <param name=sender>DataBase object</param>
        ;;; <param name=e>Update fields event argument class</param>
        public override method EventMethod  ,void
            in      req sender              ,@SynPSG.Core.DataEntities.SDMSTable
            in      req e                   ,@SynPSG.Core.DataEntities.UpdateFieldsEventArgs
            endparams

        .include 'customer' repository, stack record = "customer", end

        proc
.ifdef OS_WINDOWSNT
            debugInfo("CustomerUpdateFields:: EventMethod : Extract data from the Row to the synergy table")

            init customer

            customer.synergygrfa = Conversion.toSynGRFA(e.DataRow[0])
            customer.customer_ID = Conversion.ToSynString(e.DataRow[1])
            customer.company = Conversion.ToSynString(e.DataRow[2])
            using e.TableViewType select
            (TableView.full),
            begin
                customer.tech_Contact_ID = Conversion.ToSynInteger(e.DataRow[3])
                customer.legal_Contact_ID = Conversion.ToSynInteger(e.DataRow[4])
                customer.current_Contract = Conversion.ToSynString(e.DataRow[5])
                customer.replication_key = Conversion.ToSynString(e.DataRow[6])

            end
            endusing

            ;;record the record data
            e.SynergyRecord = customer

            debugInfo("CustomerUpdateFields:: EventMethod : data Extracted + " + customer)
.endc
            mreturn

        endmethod

    endclass

endnamespace
