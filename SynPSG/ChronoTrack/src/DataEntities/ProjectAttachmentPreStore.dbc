.include "DEF:ChronoTrack.def"

namespace SynPSG.ChronoTrack.DataEntities

    ;;;<summary>
    ;;;Event handling class.  Used to allow DataEntity classes to define
    ;;;an event handling class which will be executed prior to a store operation.
    ;;;This allows for additional processing proir to the record being stored in the file
    ;;;</summary>
    public class ProjectAttachmentPreStore extends SynPSG.Core.DataEntities.PreStore

        ;;;<summary>
        ;;;Method that must be implemented by the DataEntity class when PreStoreProcessing
        ;;;events are required to be handled.
        ;;;</summary>
        ;;;<param name=sender>DataEntiry object</param>
        ;;;<param name=e>PreStoreEventArgs</param>
        public override method EventMethod   ,void
            in      req sender              ,@SynPSG.Core.DataEntities.SDMSio
            inout   req e                   ,@SynPSG.Core.DataEntities.PreStoreEventArgs
            endparams

            .include "project_attachment" repository, record = "attachment" ,end

            record localRecord
                status      ,boolean
                index       ,int
                now         ,a20
            endrecord

        proc
            attachment = e.NewData

            init localRecord

            ;;read through all project notes to find the last one
            status = e.IOObject.Locate(%string(attachment.project_id, 'XXXXXXXX') + %string(attachment.task_id, 'XXX') , Q_PRIMARY, false)
            while (status && e.IOObject.PrimaryKeyValue .eq. %string(attachment.project_id, 'XXXXXXXX') + %string(attachment.task_id, 'XXX'))
            begin
                ;;get the data read
                attachment = e.IOObject.DataArea
                ;;store the index
                index = attachment.attachment_id

                ;;see if there are any further matching records
                status = e.IOObject.ReadNext(false)
            end

            attachment = e.NewData
            attachment.attachment_id = (index + 1)

            ;set unique key for SQL replication
            attachment.replication_key = %datetime()

            e.NewData = attachment

            mreturn

        endmethod
    endclass

endnamespace
