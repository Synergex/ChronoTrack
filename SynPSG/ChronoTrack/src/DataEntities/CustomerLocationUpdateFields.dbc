.include "DEF:ChronoTrack.def"

namespace SynPSG.ChronoTrack.DataEntities

    public sealed class CustomerLocationUpdateFields extends SynPSG.Core.DataEntities.UpdateFields

        ;;; <summary>
        ;;; Method that is called when the DataEntity class is attempting to commit
        ;;; data from a DataTable to the Synergy file.  This method is require
        ;;; to extract the data contained in the passed DataRow and populate
        ;;; a synergy record area.  This is then retrned to the base class
        ;;; </summary>
        ;;; <param name=sender>DataBase object</param>
        ;;; <param name=e>Update fields event argument class</param>
        public override method EventMethod  ,void
            in      req sender              ,@SynPSG.Core.DataEntities.SDMSTable
            in      req e                   ,@SynPSG.Core.DataEntities.UpdateFieldsEventArgs
            endparams

        .include 'customer_location' repository, stack record = "customerLocation", end

        proc
.ifdef OS_WINDOWSNT
            debugInfo("CustomerLocationUpdateFields:: EventMethod : Extract data from the Row to the synergy table")

            init customerLocation

            customerLocation.synergygrfa = Conversion.toSynGRFA(e.DataRow[0])
            customerLocation.customer_ID = Conversion.ToSynString(e.DataRow[1])
            customerLocation.location_ID = Conversion.ToSynInteger(e.DataRow[2])
            customerLocation.description = Conversion.ToSynString(e.DataRow[3])
            customerLocation.addr1 = Conversion.ToSynString(e.DataRow[4])
            customerLocation.addr2 = Conversion.ToSynString(e.DataRow[5])
            customerLocation.addr3 = Conversion.ToSynString(e.DataRow[6])
            customerLocation.addr4 = Conversion.ToSynString(e.DataRow[7])
            customerLocation.state = Conversion.ToSynString(e.DataRow[8])
            customerLocation.zip = Conversion.ToSynString(e.DataRow[9])
            customerLocation.country_ID = Conversion.ToSynString(e.DataRow[10])
            customerLocation.phone = Conversion.ToSynString(e.DataRow[11])
            customerLocation.replication_key = Conversion.ToSynString(e.DataRow[12])

            ;;record the record data
            e.SynergyRecord = customerLocation

            debugInfo("CustomerLocationUpdateFields:: EventMethod : data Extracted + " + customerLocation)
.endc
            mreturn

        endmethod

    endclass

endnamespace
