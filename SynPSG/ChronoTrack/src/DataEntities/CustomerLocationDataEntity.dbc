.include "DEF:ChronoTrack.def"

namespace SynPSG.ChronoTrack.DataEntities

    public sealed class CustomerLocationDataEntity extends SynPSG.Core.DataEntities.SDMSBase

        ;;allow the class to be referenced as a singleton
        private static mInternalData    ,@CustomerLocationDataEntity

        public static property Instance ,@CustomerLocationDataEntity
        method get
        proc
            if (mInternalData == ^null)
                mInternalData = new CustomerLocationDataEntity(true, TableView.Full)
            mreturn mInternalData
        endmethod
        endproperty

        ;;-------------------------------------------------------------------------
        ;;private fields
        ;;-------------------------------------------------------------------------

        ;;;private user record area
        .include 'customer_location' repository, private record = "mCustomerLocation", prefix="m"  ,end
        .include 'customer_location' repository, private structure = "sCustomerLocation", prefix="s"  ,end

        ;;*************************************************************************

        ;;; <summary>
        ;;; Constructor
        ;;; </summary>
        ;;; <remarks>
        ;;; Constructor defines the file name and opens the file.  Creates the
        ;;; required event handler classes
        ;;; </remarks>
        ;;; <param name=viewType>type of table/collection view to provide</param>
        ;;; <param name=noDotNet>Pass TRUE to prevent the .NET framework being loaded</param>
        public method CustomerLocationDataEntity
            in  req noDotNet            ,boolean
            in  req viewType            ,SynPSG.Core.DataEntities.TableView
            endparams
            parent("DAT:location.ism",             ;;file name
            &   new CustomerLocationPreStore(),     ;;pre store event handler
            &   ^null,                              ;;post store event handler
            &   new CustomerLocationPreUpdate(),    ;;pre update event handler
            &   ^null,                              ;;update conflict event handler
            &   ^null,                              ;;format transaction view event handler
            &   ^null,                              ;;on delete event handler
            &   viewType,                           ;;table/collection view type
            &   "Customer",                         ;;tableName
            &   new CustomerLocationDefineTable(),  ;;define DataTable columns event handler
            &   new CustomerLocationUpdateFields(), ;;field update event handler
            &   "CustomerCollection",               ;;collection name
            &   (@sCustomerLocation) str,           ;;collection object
            &   ^null,                              ;;load collection event handler
            &   noDotNet)                           ;;do we load the framework?

            record
                str ,sCustomerLocation
            endrecord
        proc

            this.IO.SetReplicationDetails("CUSTOMER_LOCATION", mCustomerLocation, mCustomerLocation.mreplication_key)

            mreturn

        endmethod

        ;;*************************************************************************

        ;;; <summary>
        ;;; Expose the data as a DataTable object
        ;;; </summary>
        ;;; <remarks>
        ;;; Expose the data as a DataTable object.  This method returns
        ;;; all data in the file as a DataTable unless the filter argument is passed.
        ;;; </remarks>
        ;;; <param name=primaryKey>optionally pass a filter on the primary key</param>
        ;;; <returns>Populated DataTable</returns>
.ifdef OS_WINDOWSNT
        public method ResultsTable  ,@System.Data.DataTable
            in  opt primaryKey      ,a
            endparams

            record locrec
                row     ,@DataRow
                status  ,boolean
                gotKey  ,boolean
                tmpID   ,a^size(mCustomerLocation.mCustomer_ID)
            endrecord
        proc
            init locrec
            this.DataTable.Clear()

            ;;now add the actual data
            if (^passed(primaryKey))
            then
            begin
                gotKey = true
                tmpID = primaryKey
                status = this.IO.Locate(tmpID, Q_PRIMARY, false)
            end
            else
            begin
                gotKey = false
                status = this.IO.ReadFirst(Q_PRIMARY, false)
            end

            while ((status && !gotKey) || (status && gotKey && this.IO.PrimaryKeyValue .eq. tmpID))
            begin
                debugInfo("CustomerLocationDataEntity::DataTable : Creating a new row")

                row = this.DataTable.Table.NewRow()

                mCustomerLocation = this.IO.DataArea

                row[0] = Conversion.ToNetGRFA(this.IO.GRFA)
                row[1] = Conversion.ToNetString(mCustomerLocation.mCustomer_ID)
                row[2] = Conversion.ToNetInteger(mCustomerLocation.mLocation_ID)
                row[3] = Conversion.ToNetString(mCustomerLocation.mDescription)
                row[4] = Conversion.ToNetString(mCustomerLocation.mAddr1)
                row[5] = Conversion.ToNetString(mCustomerLocation.mAddr2)
                row[6] = Conversion.ToNetString(mCustomerLocation.mAddr3)
                row[7] = Conversion.ToNetString(mCustomerLocation.mAddr4)
                row[8] = Conversion.ToNetString(mCustomerLocation.mState)
                row[9] = Conversion.ToNetString(mCustomerLocation.mZip)
                row[10] = Conversion.ToNetString(mCustomerLocation.mCountry_ID)
                row[11] = Conversion.ToNetString(mCustomerLocation.mPhone)
                row[12] = Conversion.ToNetString(mCustomerLocation.mReplication_Key)

                this.DataTable.Table.Rows.Add(row)

                debugInfo("CustomerLocationDataEntity::DataTable : Row added to table, key : " + mCustomerLocation.mCustomer_ID)

                status = this.IO.ReadNext(false)
            end

            ;;commit the added rows to the table
            this.DataTable.Table.AcceptChanges()

            mreturn this.DataTable.Table

        endmethod
.endc
    endclass

endnamespace


