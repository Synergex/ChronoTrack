;; here we define at compile time which namespace the routines will use.  This allows us at compile
;; time to identify if we are using;
;; variant = 0 Toolkit version
;; variant = 1 (or not set) then we use the Infragistics verison of the controls
;; variant = 2 we are using the DevExpress controls
;; variant = 3 we are using the Microsoft controls
;; variant = 4 we are using EVERYTHING!!!!


;;standard versions
.ifdef UINameSpace
.undefine UINameSpace
.endc;UINameSpace

.define UINameSpace   ChronoTrackNetUI.Forms

;;Toolkit
.if ^variant .eq. 0
.undefine UINameSpace
.define TOOLKIT_VERSION
.endc;^variant .eq. 0

;;Infragistics
.if ^variant .eq. 1
.undefine UINameSpace
.define UINameSpace   ChronoTrackNetUI.Forms
.define INFRAGISTICS_VERSION
.endc;^variant .eq. 1

;;DevExpress
.if ^variant .eq. 2
.undefine UINameSpace
.define UINameSpace   ChronoTrackNetUIDX.Forms
.define DEVEXPRESS_VERSION
.endc;^variant .eq. 2

;;DevExpress
.if ^variant .eq. 3
.undefine UINameSpace
.define UINameSpace   ChronoTrackNetUIMS.Forms
.define MICROSOFT_VERSION
.endc;^variant .eq. 3

.if ^variant .eq. 4
.undefine UINameSpace
.define UINameSpace   ChronoTrackNetUIDX.Forms
.define DEVEXPRESS_VERSION
.endc;^variant .eq. 4

.define UIClassMacro(className)   @UINameSpace.`className


